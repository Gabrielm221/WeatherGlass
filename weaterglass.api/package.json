{
  "name": "weaterglass.api",
  "version": "1.0.0",
  "description": "Weater Glass API",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/src/index.js",
    "test:functional": "node --experimental-vm-modules node_modules/jest/bin/jest.js --projects ./test --runInBand",
    "start:dev": "node --loader ts-node/esm src/index.ts",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "style:check" : "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix" : "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "test:unit" : "jest"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "api"
  ],
  "author": "Gabriel",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "body-parser": "^2.2.0",
    "express": "^5.1.0",
    "module-alias": "^2.2.3",
    "typescript-eslint": "^8.42.0"
  }
}
